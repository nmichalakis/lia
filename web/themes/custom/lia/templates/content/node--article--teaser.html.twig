{#
/**
 * @file
 * Template for a Node.
 */
#}
{%
  set classes = [
  'node',
  node.isPromoted() ? 'node--promoted',
  node.isSticky() ? 'node--sticky',
  not node.isPublished() ? 'node--unpublished',
  node.bundle|clean_class,
  node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
  'article--teaser',
  'justify-content-between',
]
%}

<article{{attributes.addClass(classes)}}>
  {{ title_prefix }}
  {{ title_suffix }}

  {% block content %}
   <div class="article__top">
    <span class="article--teaser__date small">{{ node.getCreatedTime|format_date('medium') }}</span>
    <h5{{title_attributes.addClass('mt-0')}}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h5>
    </div>
    <p>
      {{ content.body['#items'][0].summary|truncate(122) }}
    </p>
    <a class="learn-more small" href={{ url }}>{{ 'Περισσοτερα'|t }}
      <i class="fas fa-chevron-right"></i>
    </a>

  {% endblock %}
</article>
